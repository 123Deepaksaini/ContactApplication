# Database Configuration for Render / TiDB Cloud Deployment
# Copy this to .env and update with actual values

# MySQL Database Host
MYSQLHOST=gateway01.ap-southeast-1.prod.aws.tidbcloud.com

# MySQL Database Port
MYSQLPORT=4000

# MySQL Database Name
MYSQLDATABASE=contact_ap

# MySQL User
MYSQLUSER=2FZxrsCJYJcDj9Z.root

# MySQL Password
MYSQLPASSWORD=your-password-here

# Optional JDBC params (TLS enabled by default in Db.java)
MYSQL_JDBC_PARAMS=useUnicode=true&characterEncoding=UTF-8&serverTimezone=UTC&useSSL=true&requireSSL=true&enabledTLSProtocols=TLSv1.2

# Server Port (Render sets this automatically)
PORT=8080
